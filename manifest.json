{
    "manifest_version": 3,
    "name": "Perplexity Search Engine",
    "version": "1.0.0",
    "description": "This extension adds Perplexity.ai as the default search engine to your browser",
    "author": "Emrah Diril",
    "browser_specific_settings": {
        "gecko": {
          "id": "perplexity@diril.org"
        }
    },
    "chrome_settings_overrides": {
        "search_provider": {
          "name": "Perplexity",
          "search_url": "https://www.perplexity.ai/search/new?q={searchTerms}",
          "favicon_url": "icons/16.png",
          "keyword": "@perplexity",
          "is_default": true,
          "encoding": "UTF-8"
        }
    },
    "icons": {
        "16": "icons/16.png",
        "32": "icons/32.png",
        "48": "icons/48.png",
        "64": "icons/64.png"
    }
}